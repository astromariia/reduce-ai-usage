{
  "manifest_version": 3,
  "name": "ChatGPT Pop-up",
  "version": "1.0",
  "description": "Popup on chatgpt.com with a question and two options.",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://*.deepseek.com/*" 
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
